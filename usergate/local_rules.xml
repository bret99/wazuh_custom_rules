  <!-- UserGate rules -->
<group name="usergate,">
  <rule id="100101" level="3">
    <decoded_as>usergate_1</decoded_as>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: $(traffic_type) -> connection from $(srcip):$(srcport) to $(dstip):$(dstport) detected.</description>
  </rule>

  <rule id="100102" level="8">
    <if_sid>100101</if_sid>
    <field name="traffic_type">ddos_protection</field>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: $(traffic_type) from $(srcip):$(srcport) to $(dstip):$(dstport) detected.</description>
  </rule>

  <rule id="100103" level="3">
    <decoded_as>usergate_2</decoded_as>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: $(event_type) -> connection from $(srcip) user $(srcuser) $(event_event) $(event_action) detected.</description>
  </rule>

  <rule id="100104" level="10">
    <if_sid>100103</if_sid>
    <field name="event_type">admin_console</field>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: admin $(srcuser) from $(srcip) dealt with $(event_action).</description>
  </rule>
</group>
