<!-- Bitrix portal actions detecting -->
<group name="bitrix_portal,">
  <!-- Downloaded files -->
  <!-- XLSX -->
  <rule id="100101" level="7">
    <decoded_as>portal_download_xlsx</decoded_as>
    <description>Bitrix portal: XLSX file downloaded from $(srcip).</description>
  </rule>

  <!-- PPTX -->
  <rule id="100102" level="7">
    <decoded_as>portal_download_pptx</decoded_as>
    <description>Bitrix portal: PPTX file downloaded from $(srcip).</description>
  </rule>

  <!-- DOCX -->
  <rule id="100103" level="7">
    <decoded_as>portal_download_docx</decoded_as>
    <description>Bitrix portal: DOCX file downloaded from $(srcip).</description>
  </rule>

  <!-- PDF -->
  <rule id="100104" level="7">
    <decoded_as>portal_download_pdf</decoded_as>
    <description>Bitrix portal: PDF file downloaded from $(srcip).</description>
  </rule>

  <!-- MP* -->
  <rule id="100105" level="7">
    <decoded_as>portal_download_mp4</decoded_as>
    <description>Bitrix portal: MP* file downloaded from $(srcip).</description>
  </rule>

  <!-- Downloaded archives -->
  <rule id="100106" level="7">
    <decoded_as>portal_download_archive</decoded_as>
    <description>Bitrix portal: archive downloaded from $(srcip).</description>
  </rule>
</group>
